        <Label Text="{Binding Title}"
                   Padding="0,10,0,0"
                   FontSize="24"
                   FontAttributes="Bold"
                   VerticalOptions="Center" HorizontalOptions="Center" TextColor="#AC99EA"/>
    </StackLayout>
</ContentView>
