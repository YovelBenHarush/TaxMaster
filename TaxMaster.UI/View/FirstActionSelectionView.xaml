             x:Class="TaxMaster.FirstActionSelectionView"
              xmlns:local="clr-namespace:TaxMaster"
             Title="FirstActionSelectionView">
    <ContentPage.BindingContext>
        <local:FirstActionSelectionViewModel />
    </ContentPage.BindingContext>
    <VerticalStackLayout>
        <Label Text="אנא בחר איזה סוג דוח תרצה לבחור" VerticalOptions="Center" HorizontalOptions="Center" />
        <Button Text="דוח שנתי" Command="{Binding AnnualReport}" HorizontalOptions="Center"  VerticalOptions="Center"/>
    </VerticalStackLayout>
</ContentPage>