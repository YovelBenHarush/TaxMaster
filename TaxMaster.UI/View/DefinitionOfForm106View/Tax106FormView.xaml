<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaxMaster.Tax106FormView">
    <Frame BackgroundColor="LightGray" Padding="10" CornerRadius="10" BorderColor="Gray" Margin="5" WidthRequest="350">
        <StackLayout Padding="10">
            <!-- Bind each Entry to a property in the ViewModel -->
            <Entry Text="{Binding Field_158_172, Mode=TwoWay}" Keyboard="Numeric" Placeholder="Field 158-172"/>
            <Entry Text="{Binding Field_042, Mode=TwoWay}" Keyboard="Numeric" Placeholder="Field 042"/>
            <Entry Text="{Binding Field_244_245, Mode=TwoWay}" Keyboard="Numeric" Placeholder="Field 244-245"/>
            <Entry Text="{Binding Field_218_219, Mode=TwoWay}" Keyboard="Numeric" Placeholder="Field 218-219"/>
            <Entry Text="{Binding Field_086_045, Mode=TwoWay}" Keyboard="Numeric" Placeholder="Field 086-045"/>
            <Entry Text="{Binding Field_248_249, Mode=TwoWay}" Keyboard="Numeric" Placeholder="Field 248-249" IsEnabled="False"/>
        </StackLayout>
    </Frame>
</ContentView>
