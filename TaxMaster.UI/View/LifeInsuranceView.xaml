<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaxMaster.LifeInsuranceView"
             xmlns:local="clr-namespace:TaxMaster"
             Title="LifeInsuranceView">
    <ContentPage.BindingContext>
        <local:LifeInsuranceViewModel />
    </ContentPage.BindingContext>
    <Grid RowDefinitions="9*, 1*">

    <ScrollView Grid.Row="0">
        <StackLayout Padding="20">

            <!-- Placeholder for short explanation about life insurance -->
            <Label Text="נתוני ביטחי חיים" FontSize="Medium" HorizontalOptions="Center" Margin="0,0,0,20" FlowDirection="RightToLeft"/>
                <Label Text="עבור תשלום שנתי של פוליסת ביטוח חיים ניתן לקבל 25% החזר כחלק מהדוח השנתי. לצורך כך, יש להזין את הפרמיה השנתית ששולמה בשנת המס  וכן לצרף את הטופס מחברת הביטוח (המערכת מבצעת את החישוב של ה25%).  המידע מיועד לחלק פירוט ההכנסות בדוח השנתי." FontSize="Small" FontAttributes="None" FlowDirection="RightToLeft" Padding="50"/>

                <!-- Horizontal layout for User and Partner sections -->
            <StackLayout Orientation="Horizontal" Spacing="40" FlowDirection="RightToLeft">

                <!-- User Section -->
                <Frame BorderColor="LightGray" CornerRadius="10" Padding="10" MinimumWidthRequest="650">
                    <StackLayout>
                            <Label Text="ביטוחי החיים שלי" FontSize="Small" FontAttributes="Bold" FlowDirection="RightToLeft"/>

                        <!-- ListView for multiple insurances -->
                            <CollectionView x:Name="UserInsuranceList" ItemsSource="{Binding UserInsurances}" Margin="10">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <StackLayout Orientation="Horizontal" Spacing="10" Margin="10">
                                            <!-- Choose insurance company -->
                                            <Entry Placeholder="חברת הביטוח" Text="{Binding Company}" FlowDirection="RightToLeft" WidthRequest="200" Margin="5"/>

                                            <!-- Annual amount paid for the insurance -->
                                            <Entry Placeholder="עלות פוליסה שנתית" Keyboard="Numeric" Text="{Binding AnnualAmount}" WidthRequest="200" Margin="5"/>

                                            <!-- Option to pick a local copy of the life insurance -->
                                            <Button Text="העלאת העתק של הפוליסה" Command="{Binding Path=BindingContext.PickFileCommand, Source={x:Reference PartnerInsuranceList}}" CommandParameter="{Binding .}" FlowDirection="RightToLeft" WidthRequest="200" Margin="5"/>

                                            <!-- Remove button -->
                                            <Button Text="X" Command="{Binding Path=BindingContext.RemoveInsuranceCommand, Source={x:Reference UserInsuranceList}}" CommandParameter="{Binding .}" HeightRequest="10" WidthRequest="20" Margin="5"/>
                                        </StackLayout>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>


                            <!-- Add new insurance button -->
                        <Button Text="הוספת ביטוח נוסף" Command="{Binding AddInsuranceCommand}" CommandParameter="User"/>
                    </StackLayout>
                </Frame>

                <!-- Partner Section -->
                <Frame BorderColor="LightGray" CornerRadius="10" Padding="10" WidthRequest="600" IsVisible="{Binding IsNotSingle}">
                    <StackLayout>
                            <Label Text="ביטוחי החיים של בן\בת הזוג" FontSize="Small" FontAttributes="Bold" FlowDirection="RightToLeft"/>

                            <!-- ListView for multiple insurances -->
                            <CollectionView x:Name="PartnerInsuranceList" ItemsSource="{Binding PartnerInsurances}" Margin="30">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <StackLayout Orientation="Horizontal" Spacing="10" Margin="10">
                                            <!-- Choose insurance company -->
                                            <Entry Placeholder="חברת הביטוח" Text="{Binding Company}" FlowDirection="RightToLeft"/>

                                            <!-- Annual amount paid for the insurance -->
                                            <Entry Placeholder="עלות פוליסה שנתית" Keyboard="Numeric" Text="{Binding AnnualAmount}" WidthRequest="150"/>

                                            <!-- Option to pick a local copy of the life insurance -->
                                            <Button Text="העלאת העתק של הפוליסה" Command="{Binding Path=BindingContext.PickFileCommand, Source={x:Reference PartnerInsuranceList}}" CommandParameter="{Binding .}" FlowDirection="RightToLeft" WidthRequest="200"/>

                                            <!-- Remove button -->
                                            <Button Text="X" Command="{Binding Path=BindingContext.RemoveInsuranceCommand, Source={x:Reference PartnerInsuranceList}}" CommandParameter="{Binding .}" HeightRequest="10" WidthRequest="20"/>
                                        </StackLayout>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>


                            <!-- Add new insurance button -->
                        <Button Text="Add Insurance" Command="{Binding AddInsuranceCommand}" CommandParameter="Partner"/>
                    </StackLayout>
                </Frame>
            </StackLayout>
        </StackLayout>
    </ScrollView>

        <!-- Button area for navigation -->
        <local:NavigationButtonsView Grid.Row="1" />

    </Grid>

</ContentPage>