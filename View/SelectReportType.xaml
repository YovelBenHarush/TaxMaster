<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaxMaster.SelectReportType"
             xmlns:local="clr-namespace:TaxMaster"
             Title="SelectReportType">
    <ContentPage.BindingContext>
        <local:SelectReportTypeViewModel />
    </ContentPage.BindingContext>
    <VerticalStackLayout>
        <Label Text="אנא בחר איזה סוג דוח תרצה לבחור" VerticalOptions="Center" HorizontalOptions="Center" />
        <Button Text="דוח חדש" Command="{Binding NewReport}" />
        <Button Text="דוח קיים" Command="{Binding OldReport}" />
    </VerticalStackLayout>
</ContentPage>